{
  "name": "uv-debug-scripts",
  "displayName": "UV Debug Scripts",
  "description": "Debug uv [project.scripts] entry points from pyproject.toml with zero launch.json friction.",
  "version": "0.0.4",
  "publisher": "you",
  "engines": {
    "vscode": "^1.85.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kkibria/uv-debug-scripts"
  },
  "categories": [
    "Debuggers",
    "Programming Languages"
  ],
  "activationEvents": [
    "workspaceContains:pyproject.toml",
    "onCommand:uvDebugScripts.debugScript",
    "onCommand:uvDebugScripts.debugLastScript",
    "onCommand:uvDebugScripts.debugLastScriptEditArgs",
    "onCommand:uvDebugScripts.toggleHideUninitializedProjects"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "UV Debug Scripts",
      "properties": {
        "uvDebugScripts.hideUninitializedProjects": {
          "type": "boolean",
          "default": false,
          "description": "Hide workspace folders that have pyproject.toml but no .venv."
        }
      }
    },
    "commands": [
      {
        "command": "uvDebugScripts.debugScript",
        "title": "UV: Debug Script"
      },
      {
        "command": "uvDebugScripts.debugLastScript",
        "title": "UV: Debug Last Script"
      },
      {
        "command": "uvDebugScripts.debugLastScriptEditArgs",
        "title": "UV: Debug Last Script (Edit Args)"
      },
      {
        "command": "uvDebugScripts.toggleHideUninitializedProjects",
        "title": "UV: Toggle Hide Uninitialized Projects"
      }
    ],
    "keybindings": [
      {
        "command": "uvDebugScripts.debugLastScript",
        "key": "ctrl+shift+enter",
        "mac": "cmd+shift+enter",
        "when": "editorTextFocus"
      },
      {
        "command": "uvDebugScripts.debugLastScriptEditArgs",
        "key": "ctrl+shift+alt+enter",
        "mac": "cmd+shift+alt+enter",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p . --noEmit",
    "build": "node ./esbuild.mjs",
    "package": "npm run build && npx @vscode/vsce package"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.0.0",
    "esbuild": "^0.27.3",
    "typescript": "^5.4.0"
  }
}
